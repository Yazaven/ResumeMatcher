{
  "version": 2,
  "builds": [
    {
      "src": "api/*.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)",       "dest": "api/$1.py" },

    {
      "handle": "filesystem"
    },

    {
      "src": "/(.*)",
      "dest": "frontend/build/index.html"
    }
  ]
}
